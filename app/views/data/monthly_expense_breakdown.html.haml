- content_for :sidebar do
  = render partial: "data/sidebar"

.page-header
  %h2
    Monthly expense breakdown from
    = @chart.starts_on.to_s(:words)
    to
    = @chart.ends_on.to_s(:words)

= form_tag "", class: "form-inline", method: :get do 
  = select_month(params[:month].present? ? Date.new(Date.today.year, params[:month].to_i) : Date.today, field_name: "placeholder", prompt: "(All year)").gsub('date[placeholder]', 'month').html_safe
  = select_tag :year, options_for_select(current_household.applicable_years, selected: params[:year].presence.try(:to_i))
  = button_tag "Filter", class: "btn btn-primary"

  = chart_from_json(@chart, :monthly_expense_breakdown)
