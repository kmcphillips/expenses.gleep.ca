= form_for @entry_schedule, html: { class: 'form-horizontal' } do |f|
  = f.error_messages

  .control-group
    = f.label :category_id, class: 'control-label', value: "Category"
    .controls
      = f.select :category_id, grouped_options_for_select(current_household.categories_for_select, selected: f.object.category_id)

  .control-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name, class: 'input-xlarge'

  .control-group
    = f.label :amount, class: 'control-label'
    .controls
      .input-prepend
        %span.add-on $
        = f.text_field :amount, class: "input-mini"

  .control-group
    = f.label :frequency, class: 'control-label'
    .controls
      = f.select :frequency, options_for_select(EntrySchedule::FREQUENCIES.map{|f| [f.humanize, f]}, selected: f.object.frequency)

  .control-group
    = f.label :starts_on, class: 'control-label'
    .controls
      = f.date_field :starts_on

  - unless @entry_schedule.new_record?
    .control-group
      = f.label :active, class: 'control-label'
      .controls
        = f.check_box :active

  .form-actions
    = f.submit "Save", class: 'btn btn-primary'
    = link_to "Cancel", entry_schedules_path, class: 'btn'
