.page-header
  %h2 Entry Schedule

%p= link_to "New Schedule", new_entry_schedule_path, class: 'btn btn-primary'

%table.table.table-striped.table-hover
  %thead
    %tr
      %th Name
      %th Category
      %th Amount
      %th Frequency
      %th Active?
      %th Actions
  %tbody
    - @entry_schedules.each do |entry_schedule|
      %tr
        %td= entry_schedule.description
        %td= entry_schedule.category.name
        %td= number_to_currency entry_schedule.amount, precision: 0
        %td= entry_schedule.frequency.humanize
        %td= boolean_glyph entry_schedule.active?
        %td
          = link_to "Edit", edit_entry_schedule_path(entry_schedule), class: 'btn btn-mini'
          = link_to "Destroy", entry_schedule_path(entry_schedule), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger'
