- model_class = EntrySchedule
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @entry_schedule.name
%p
  %strong= model_class.human_attribute_name(:category_id) + ':'
  %br
  = @entry_schedule.category_id
%p
  %strong= model_class.human_attribute_name(:household_id) + ':'
  %br
  = @entry_schedule.household_id
%p
  %strong= model_class.human_attribute_name(:amount) + ':'
  %br
  = @entry_schedule.amount
%p
  %strong= model_class.human_attribute_name(:starts_on) + ':'
  %br
  = @entry_schedule.starts_on
%p
  %strong= model_class.human_attribute_name(:frequency) + ':'
  %br
  = @entry_schedule.frequency
%p
  %strong= model_class.human_attribute_name(:active) + ':'
  %br
  = @entry_schedule.active

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), entry_schedules_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_entry_schedule_path(@entry_schedule), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), entry_schedule_path(@entry_schedule), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
