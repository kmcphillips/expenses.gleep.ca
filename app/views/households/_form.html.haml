= form_for @household, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name
  .control-group
    = f.label :started_on, :class => 'control-label'
    .controls
      = f.date_field :started_on
  .form-actions
    = f.submit "Save", :class => 'btn btn-primary'
    = link_to "Cancel", household_path(@household), class: 'btn'
