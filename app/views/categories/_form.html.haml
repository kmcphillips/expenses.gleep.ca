= form_for @category, html: { class: 'form-horizontal' } do |f|
  .control-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name, class: 'input-large', required: true

  .control-group
    = f.label :description, class: 'control-label'
    .controls
      = f.text_area :description, rows: 4, cols: 60, placeholder: "Optional"

  .control-group
    = f.label :income, class: 'control-label'
    .controls
      = f.check_box :income

  .control-group
    = f.label :category_type, class: 'control-label', value: "Type"
    .controls
      = f.select :category_type, options_for_select(Category::TYPES.map{|c| [c.humanize, c]}, selected: f.object.category_type)

  - if !@category.new_record?
    .control-group
      = f.label :active, class: 'control-label'
      .controls
        = f.check_box :active

  .form-actions
    = f.submit "Save", class: 'btn btn-primary'
    = link_to "Cancel", categories_path, class: 'btn'
